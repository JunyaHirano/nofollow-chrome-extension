{
  "manifest_version": 2,
  "name": "SEOTagViewer",
  "description": "robots.txtの確認および、ページ内にあるNoIndex、NoFollow、Canonicalなどを検知して表示する",
  "version": "0.1",
  "icons": {
    "16": "images/icon/icon_16.png",
    "48": "images/icon/icon_48.png",
    "128": "images/icon/icon_128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "css": ["css/style.css"],
      "js": ["js/jquery-2.2.4.min.js", "js/js.cookie.js", "js/action.js"]
    }
  ],
  "permissions": [
    "tabs",
    "https://*/*",
    "http://*/*",
    "storage"
  ]
}