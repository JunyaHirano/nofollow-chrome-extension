{
  "manifest_version": 2,
  "name": "nofollow",
  "description": "NoIndexとかNoFollowタグを検知するやつ",
  "version": "0.1",
  "icons": {
    "16": "images/icon/icon_16.png",
    "48": "images/icon/icon_48.png",
    "128": "images/icon/icon_128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "css": ["css/nofollow.css"],
      "js": ["js/jquery-2.2.4.min.js", "js/nofollow.js"]
    }
  ],
  "permissions": [
    "tabs",
    "https://*/*",
    "http://*/*",
    "storage"
  ]
}